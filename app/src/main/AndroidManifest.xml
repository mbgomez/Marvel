<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marvel.comicshop">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.marvel.comicshop.ComicShopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.marvel.comicshop.ui.splash.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.marvel.comicshop.ui.legal.LegalActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.marvel.comicshop.ui.main.ComicsActivity"
            android:screenOrientation="portrait">
        </activity>


        <activity android:name="com.marvel.comicshop.ui.base.BaseActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>